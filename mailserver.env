# Domain and Hostname Configuration
OVERRIDE_HOSTNAME=mail.techtorio.online
DOMAINNAME=techtorio.online

# Enable/Disable Services
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=1
ENABLE_FAIL2BAN=1
ENABLE_POSTGREY=0
ENABLE_SASLAUTHD=0

# SSL/TLS Configuration
SSL_TYPE=manual
SSL_CERT_PATH=/tmp/docker-mailserver/ssl/cert.pem
SSL_KEY_PATH=/tmp/docker-mailserver/ssl/key.pem

# DKIM (Email Authentication)
ENABLE_DKIM=1
DKIM_SELECTOR=mail
DKIM_KEY_SIZE=2048

# Spam and Virus Scanning
SPAMASSASSIN_SPAM_TO_INBOX=1
ENABLE_SPAMASSASSIN_KAM=1
MOVE_SPAM_TO_JUNK=1
SA_SPAM_SUBJECT=[SPAM]

# Security Settings
PERMIT_DOCKER=none
SPOOF_PROTECTION=1
ENABLE_SRS=0

# Mailbox Settings
ENABLE_QUOTAS=1
DEFAULT_QUOTA=5120  # 5GB default quota per mailbox (in MB)

# Postfix (SMTP) Settings
POSTFIX_MESSAGE_SIZE_LIMIT=52428800  # 50MB max email size
POSTFIX_MAILBOX_SIZE_LIMIT=0  # Unlimited (controlled by quotas)

# Logging
LOG_LEVEL=info
SUPERVISOR_LOGLEVEL=info

# Multi-domain support (for user subdomains)
ENABLE_LDAP=0
ENABLE_OAUTH2=0

# Performance
ONE_DIR=1
DMS_DEBUG=0

# Postscreen (Connection filtering)
ENABLE_POSTSCREEN=0

# Account Management
# Note: Accounts will be created via 'setup email add' command
# Example: docker exec mailserver setup email add user@techtorio.online password123

# Relay Configuration (optional - if you need to relay through another SMTP)
# RELAY_HOST=
# RELAY_PORT=587
# RELAY_USER=
# RELAY_PASSWORD=

# Timezone
TZ=UTC
