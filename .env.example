# YaqeenPay Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Registry Configuration
REGISTRY=registry.dev.tekmobile.online
# For Docker Hub: REGISTRY=your-dockerhub-username
# For private registry: REGISTRY=your-private-registry.com

# Image Tags
TAG=latest

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=5000

# Database Configuration (required for backend)
DB_CONNECTION_STRING=Host=db.example.com;Database=YaqeenPay;Username=postgres;Password=change-me;Port=5432;Pooling=true;MinPoolSize=5;MaxPoolSize=100;CommandTimeout=60;Timeout=60;

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production

# JWT Settings (required for Production/Staging)
JWT_ISSUER=YaqeenPay
JWT_AUDIENCE=YaqeenPayClient
JWT_KEY_ID=prod-1
JWT_PRIVATE_KEY=REPLACE_WITH_BASE64_PKCS8
JWT_PUBLIC_KEY=REPLACE_WITH_BASE64_SPKI

# Frontend Build-Time API Base URL
VITE_API_BASE_URL=https://api.example.com/api

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Logging Configuration
# LOG_LEVEL=Information