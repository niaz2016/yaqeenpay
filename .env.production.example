# TechTorio Platform Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_USER=techtorio_admin
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
DB_HOST=postgres
DB_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_KEY_FOR_JWT_TOKENS_789!
JWT_ISSUER=https://api.techtorio.online
JWT_AUDIENCE=https://techtorio.online

# ============================================
# Application URLs
# ============================================
MAIN_DOMAIN=techtorio.online
API_URL=https://api.techtorio.online
techtorio_URL=https://techtorio.techtorio.online

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@techtorio.online

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_EMAIL=admin@techtorio.online
LETSENCRYPT_STAGING=false

# ============================================
# Monitoring (Optional)
# ============================================
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD!

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
S3_BUCKET=techtorio-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# ============================================
# Application Specific Settings
# ============================================
# TechTorio
techtorio_DB=techtorio
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_INTEGRITY_SALT=your-integrity-salt

# Future App 2
# APP2_DB=app2
# APP2_API_KEY=...

# Future App 3
# APP3_DB=app3
# APP3_SECRET=...
